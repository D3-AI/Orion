{
    "name": "orion.primitives.timeseries_preprocessing.rolling_window_sequences_autoencoder",
    "description": "Create rolling window sequences out of timeseries data.",
    "classifiers": {
        "type": "estimator",
        "subtype": "regressor"
    },
    "modalities": [
        "timeseries"
    ],
    "primitive": "orion.primitives.timeseries_preprocessing.rolling_window_sequences_autoencoder",
    "produce": {
        "args": [
            {
                "name": "X",
                "type": "ndarray"
            },
            {
                "name": "index",
                "type": "ndarray"
            },
            {
                "name": "drop",
                "type": "ndarray or None or str or int or float or bool",
                "required": false
            }
        ],
        "output": [
            {
                "name": "X",
                "type": "ndarray"
            },
            {
                "name": "index",
                "type": "ndarray"
            }
        ]
    },
    "hyperparameters": {
        "fixed": {
            "window_size": {
                "type": "int",
                "default": 250
            },
            "step_size": {
                "type": "int",
                "default": 1
            },
            "target_size": {
                "type": "int",
                "default": 1
            },
            "target_column": {
                "type": "int",
                "default": 0
            },
            "drop_windows": {
                "type": "bool",
                "default": false
            }
        }
    }
}